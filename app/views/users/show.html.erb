<% provide(:title, @user.name) %>

<div class="row">
    <section class="user_info">
            <h1>
            <% if @user.image? %>
              <%= image_tag @user.image.thumb.url , class: "big-user-icon" %>
            <% else %>
              <%= image_tag "default.jpg", alt: "user-icon", class: "user-icon" %>
            <% end %>
            <br>
              <%= @user.name %>
            </h1>
    </section>
</div>