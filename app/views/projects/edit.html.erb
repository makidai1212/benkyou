<% provide(:title, '学習計画編集') %>
<h1>学習計画編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @project, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :step_1, "Step 1" %>
      <%= f.text_field :step_1, class: 'form-control', placeholder: @project.step_1 %>
      <%= f.label :step_1, "Step 2" %>
      <%= f.text_field :step_2, class: 'form-control' %>
      <%= f.label :step_1, "Step 3" %>
      <%= f.text_field :step_3, class: 'form-control' %>
      <%= f.label :step_1, "Step 4" %>
      <%= f.text_field :step_4, class: 'form-control' %>
      <%= f.label :step_1, "Step 5" %>
      <%= f.text_field :step_5, class: 'form-control' %>
      <%= f.label :step_1, "Step 6" %>
      <%= f.text_field :step_6, class: 'form-control' %>
      <%= f.submit "この内容に変更する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>